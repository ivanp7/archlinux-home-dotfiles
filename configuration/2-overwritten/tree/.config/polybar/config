[module/filesystem]
type = internal/fs
interval = 10

mount-0 = /
mount-1 = /home

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_free%% free (%free% / %total%)
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

format-mounted-underline = #0a6cf5
format-unmounted-underline = ${self.format-mounted-underline}

