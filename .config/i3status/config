# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

# order += "ipv6"
# order += "wireless _first_"
# order += "ethernet _first_"

order += "disk /home"
order += "disk /"

# order += "battery all"

order += "cpu_usage"
order += "load"

order += "tztime localdate"
order += "tztime localtime"

# wireless _first_ {
#         format_up = "W: (%quality at %essid) %ip"
#         format_down = "W: down"
# }

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "Eth: %ip"
        format_down = "Eth: down"
}

disk "/" {
    low_threshold = 10
    threshold_type = percentage_avail
    format = "Root: %used of %total used (%percentage_used)"
    format_below_threshold = "Root: %used of %total used (%percentage_used)"
}

disk "/home" {
    low_threshold = 10
    threshold_type = percentage_avail
    format = "Home: %used of %total used (%percentage_used)"
    format_below_threshold = "Home: %used of %total used (%percentage_used)"
}

# battery all {
#         format = "Battery: %percentage (%status) - %remaining (%consumption)"
# }

cpu_usage {
    degraded_threshold = 50
    max_threshold = 90
    format = "CPU usage: %usage"
    format_above_degraded_threshold = "CPU usage: %usage"
    format_above_threshold = "CPU usage: %usage"
}

load {
    max_threshold = "0.5"
        format = "Load (1m): %1min"
        format_above_threshold = "Load (1m): %1min"
}

tztime localdate {
    format = "Date: %Y-%m-%d"
}

tztime localtime {
    format = "Time: %H:%M:%S  "
}

